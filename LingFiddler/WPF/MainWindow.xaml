<Window x:Class="LingFiddler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LingFiddler"
        mc:Ignorable="d"
        Title="Ling Machine" Height="800" Width="1080">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TabControl Grid.Row="0">
                <TabItem Header="Text"/>
                <TabItem Header="Expressions"/>
                <TabItem Header="Lexicon"/>
                <TabItem Header="Script"/>
                <TabItem Header="Generated"/>
            </TabControl>
            <Grid Grid.Row="1" x:Name="MainViewContainer">
                
            </Grid>
        </Grid>
    </DockPanel>
</Window>
