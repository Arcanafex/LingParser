<Window x:Class="Lx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lx"
        mc:Ignorable="d"
        Title="Word Harvester" Height="800" Width="1080">

    <DockPanel>
        <DockPanel DockPanel.Dock="Right">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
                <Button x:Name="ButtonWords" Content="Words" Width="80" Click="Words_Click"/>
                <Button x:Name="ButtonNgrams" Content="Ngrams"  Width="80" Margin="5, 0" Click="Ngrams_Click"/>
                <Label Content="N =" HorizontalAlignment="Right"/>
                <TextBox x:Name="TextNgram" Text="2"  Width="80" Margin="5, 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="10">
                <Button x:Name="Delete" Content="Delete" Width="80" Click="Delete_Click"/>
                <Button x:Name="SaveWords" Content="Save"  Width="80"  Margin="5, 0" Click="SaveWords_Click"/>
                <TextBox Text="Language" Width="230" />
            </StackPanel>
            <DataGrid Name="WordGrid" Width="400" Margin="10" SelectionChanged="WordGrid_SelectionChanged" SelectionMode="Extended" AutoGenerateColumns="False" />
        </DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" Margin="10, 0, 10, 5">
                <StackPanel Width="120">
                    <Label Content="Word Estimate" Height="23" VerticalAlignment="Center"/>
                    <Label Content="Unique Chars" Height="23" VerticalAlignment="Center"/>
                    <Label Content="Chars" Height="23" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Width="80">
                    <TextBlock Name="WordCount" Text="0" Height="23" VerticalAlignment="Center"/>
                    <TextBlock Name="UniqueCharCount" Text="0" Height="23" VerticalAlignment="Center"/>
                    <TextBlock Name="CharCount" Text="0" Height="23" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Line Pattern" Width="120"/>
                        <TextBox Name="LinePattern" Text=".+[\.\?\!]" Width="200" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Word Pattern" Width="120"/>
                        <TextBox Name="WordPattern" Text="[^\W0-9_]+" Width="200" VerticalAlignment="Center" TextChanged="UpdateCurrentWordPattern"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <TextBox Name="PathBox" Margin="10, 5" Text="Path"/>
            <DockPanel Margin="10">
                <Button Name="LoadText" Content="Load" DockPanel.Dock="Left" Width="75" Click="Load_Click"/>
                <Button Name="CreateWords" Content="Create" DockPanel.Dock="Right" HorizontalAlignment="Right" Width="75" Click="CreateWords_Click"/>
                <Button Name="GetWords" Content="Parse" DockPanel.Dock="Right" HorizontalAlignment="Right" Width="75" Margin="5,0" Click="GetWords_Click"/>
            </DockPanel>
        </StackPanel>
        <TextBox Name="TextBlock" Margin="10,10" TextWrapping="Wrap" Text="" VerticalScrollBarVisibility="Auto" LostFocus="MyTextBox_LostFocus" TextChanged="CurrentTextUpdated"/>
    </DockPanel>
</Window>
