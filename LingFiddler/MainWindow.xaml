<Window x:Class="Lingx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lingx"
        mc:Ignorable="d"
        Title="Word Harvester" Height="450" Width="800">
    <Grid>
        <TextBox Name="TextBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" Width="530" VerticalScrollBarVisibility="Auto" Height="276" VerticalAlignment="Top" LostFocus="MyTextBox_LostFocus" TextChanged="CurrentTextUpdated"/>
        <Button Name="LoadText" Content="Load" HorizontalAlignment="Left" Margin="10,392,0,0" VerticalAlignment="Top" Width="75" Click="Load_Click"/>
        <TextBox Name="PathBox" Height="23" Margin="10,364,0,0" TextWrapping="Wrap" Text="Path" VerticalAlignment="Top" HorizontalAlignment="Left" Width="530"/>
        <Label Content="Word Estimate" HorizontalAlignment="Left" Margin="10,324,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.196,0.604"/>
        <TextBlock Name="WordCount" HorizontalAlignment="Left" Margin="150,329,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <DataGrid Name="WordGrid" Margin="558,10,10,0" Height="276" VerticalAlignment="Top" SelectionChanged="WordGrid_SelectionChanged" SelectionMode="Extended" AutoGenerateColumns="False" />
        <Button Name="GetWords" Content="Parse" HorizontalAlignment="Left" Margin="465,392,0,0" VerticalAlignment="Top" Width="75" Click="GetWords_Click"/>
        <Label Content="Chars" HorizontalAlignment="Left" Margin="10,291,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.196,0.604"/>
        <TextBlock Name="CharCount" HorizontalAlignment="Left" Margin="150,296,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <Button Name="Delete" Content="Delete" Margin="710,291,10,0" VerticalAlignment="Top" Click="Delete_Click"/>
        <TextBox Name="WordPattern" HorizontalAlignment="Left" Height="23" Margin="356,294,0,0" TextWrapping="Wrap" Text="[^\W0-9_]+" VerticalAlignment="Top" Width="184" TextChanged="UpdateCurrentWordPattern"/>
        <Label Content="Word Pattern" HorizontalAlignment="Left" Margin="270,291,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LinePattern" HorizontalAlignment="Left" Height="23" Margin="356,322,0,0" TextWrapping="Wrap" Text=".+[\.\?\!]" VerticalAlignment="Top" Width="184"/>
        <Label Content="Line Pattern" HorizontalAlignment="Left" Margin="270,320,0,0" VerticalAlignment="Top" Width="72" RenderTransformOrigin="0.315,0.36"/>
        <Button x:Name="SaveWords" Content="Save" Margin="710,392,10,0" VerticalAlignment="Top" Click="SaveWords_Click"/>
        <TextBox Height="23" Margin="558,364,10,0" TextWrapping="Wrap" Text="Language" VerticalAlignment="Top"/>
        <Label Content="Unique Chars" HorizontalAlignment="Left" Margin="10,307,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.196,0.604"/>
        <TextBlock x:Name="UniqueCharCount" HorizontalAlignment="Left" Margin="150,312,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>

    </Grid>
</Window>
